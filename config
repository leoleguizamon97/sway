### README
	# Este archivo esta pensado para configurar SWAY rapidamente y de forma sencilla
	# en una instalacion minima de Ubuntu o Debian con Wayland
	# Ofrece una configuracion, personalizacion y funcionamiento basico
	# suficiente para la mayoria de los usuarios
	# 
	# Se recomienda leer la documentacion oficial de SWAY para entender mejor las opciones
	#
	# Paquetes necesarios:
	# 
	# Obligatorias:
	# sudo apt install sway swaybg swayidle swaylock sway-notification-center
	# 
	# Necesarias:
	# sudo apt install wofi brightnessctl pipewire playerctl
	# 
	# Recomendadas:
	# sudo apt install firefox-esr 
	#
	# @leoleguizamon97
###

### Variables
	# Cambia la variable $background por la ruta de tu wallpaper
	# O nombra tu wallpaper bg.jpg y guardalo en ~/config/sway/
	set $background bg.jpg

	# Cambia la variable $mod por la tecla que prefieras
	# Mod4 (tecla de Windows) Mod1 (tecla Alt) Control (tecla Control)
	set $mod Mod4

	## Llena '' con la aplicacion preferida
	## Borra despues de | si asignaste una app
	## Si se dejan varias apps en una variable se abriran todas
	## a menos que no este instalada
	
	# Terminal
	set $term '' | foot | gnome-terminal | kitty

	# Applications

		# Your preferred application launcher
		set $menu wofi --show drun

		# Your preferred web browser
		set $browser firefox --new-tab

		# Your preferred file manager
		set $filemanager '' | thunar | nautilus 

		# Your preferred text editor
		set $editor '' | code 

		# Your preferred screenshot tool
		set $screenshot '' | ''

		# Your preferred calculator
		set $calculator '' | gnome-calculator

		# Your preferred music player
		set $musicplayer '' | spotify

		# Your preferred email client
		set $emailclient '' | firefox --new-tab gmail.com

		# Your preferred calendar
		set $calendar '' | firefox --new-tab calendar.google.com 

### Startup applications

	exec --no-startup-id dunst
	exec killall dunst
	exec swaync
	exec wl-paste -t text --watch clipman store --no-persist

### Idle configuration
	exec swayidle \
		timeout 600 'swaylock -f -e' \
		before-sleep 'playerctl pause; swaylock'

### Key bindings

	# Basics

		# Start a terminal
		bindsym $mod+t exec $term

		# Kill focused window
		bindsym $mod+q kill

		# Start your launcher
		bindsym $mod+Return exec $menu

		# mouse button for dragging.
		floating_modifier $mod normal

		# Reload the configuration file
		bindsym $mod+c reload

		# Exit sway (logs you out of your Wayland session)
		bindsym $mod+e exec swaynag -m 'Exit sway?' -B 'Yes' 'swaymsg exit'

		# Notification center
		bindsym $mod+n exec swaync-client -t -sw

	# Moving around:

		# Move your focus around
		bindsym $mod+Left focus left
		bindsym $mod+Down focus down
		bindsym $mod+Up focus up
		bindsym $mod+Right focus right

		# Move the focused window with the same, but add Shift
		bindsym $mod+Shift+Left move left
		bindsym $mod+Shift+Down move down
		bindsym $mod+Shift+Up move up
		bindsym $mod+Shift+Right move right
	
	# Workspaces:

		# Move between workspaces
		bindsym Alt+Tab workspace next
		bindsym Alt+Shift+Tab workspace prev

		# Switch to workspace
		bindsym $mod+1 workspace number 1
		bindsym $mod+2 workspace number 2
		bindsym $mod+3 workspace number 3
		bindsym $mod+4 workspace number 4
		bindsym $mod+5 workspace number 5
		bindsym $mod+6 workspace number 6
		bindsym $mod+7 workspace number 7
		bindsym $mod+8 workspace number 8
		bindsym $mod+9 workspace number 9
		bindsym $mod+0 workspace number 10

		# Move focused container to workspace
		bindsym $mod+Shift+1 move container to workspace number 1
		bindsym $mod+Shift+2 move container to workspace number 2
		bindsym $mod+Shift+3 move container to workspace number 3
		bindsym $mod+Shift+4 move container to workspace number 4
		bindsym $mod+Shift+5 move container to workspace number 5
		bindsym $mod+Shift+6 move container to workspace number 6
		bindsym $mod+Shift+7 move container to workspace number 7
		bindsym $mod+Shift+8 move container to workspace number 8
		bindsym $mod+Shift+9 move container to workspace number 9
		bindsym $mod+Shift+0 move container to workspace number 10

	# Layout stuff:

		# You can "split" the current object of your focus 
		# for horizontal and vertical splits respectively.
		bindsym $mod+h splith
		bindsym $mod+v splitv
		bindsym $mod+z splith
		bindsym $mod+x splitv

		# Switch the current container between different layout styles
		bindsym $mod+a layout tabbed
		bindsym $mod+s layout stacking
		bindsym $mod+d layout toggle split

		# Make the current focus fullscreen
		bindsym $mod+f fullscreen

		# Toggle the current focus between tiling and floating mode
		bindsym $mod+space floating toggle

		# Swap focus between the tiling area and the floating area
		bindsym $mod+Shift+space focus mode_toggle

		# Move focus to the parent container
		bindsym $mod+w focus parent
		
		# Resizing containers:
		
		bindsym $mod+r mode "resize"
		mode "resize" {

			bindsym Left resize shrink width 10px
			bindsym Down resize grow height 10px
			bindsym Up resize shrink height 10px
			bindsym Right resize grow width 10px

			# Return to default mode
			bindsym Return mode "default"
			bindsym Escape mode "default"
		}
	#
	# Scratchpad:
	#
		# Move the currently focused window to the scratchpad
		bindsym $mod+minus move scratchpad

		# Show the next scratchpad window or hide the focused scratchpad window.
		bindsym $mod+equal scratchpad show


### Hardware keys bindings

	# Teclas de volumen y audio
	bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 2.5%+
	bindsym --locked XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 2.5%-
	bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
	bindsym --locked XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

	# Teclas de brillo y pantalla
	bindsym --locked XF86MonBrightnessUp exec brightnessctl s +10%
	bindsym --locked XF86MonBrightnessDown exec brightnessctl s 10%-
	bindsym XF86Display exec swaymsg output eDP-1 disable #Desactivar pantalla integrada

	# Teclas de control de reproduccion
	bindsym --locked XF86AudioPlay exec playerctl play-pause
	bindsym --locked XF86AudioStop exec playerctl stop
	bindsym --locked XF86AudioNext exec playerctl next
	bindsym --locked XF86AudioPrev exec playerctl previous
	bindsym XF86Tools exec $musicplayer #Open media player

	# Teclas de red y energia
	bindsym XF86WLAN status 
	bindsym XF86RFKill exec #Airplane mode button
	bindsym XF86PowerOff exec 

	# Teclas de navegacion web
	bindsym XF86Back exec 
	bindsym XF86Forward exec 
	bindsym XF86HomePage exec $browser
	bindsym XF86Reload exec 

	# Teclas de aplicaciones y busqueda
	bindsym XF86Search exec $filemanager
	bindsym XF86Mail exec $emailclient
	bindsym XF86Calculator exec $calculator
	bindsym XF86MyComputer exec $filemanager
	bindsym XF86LaunchA exec 
	bindsym XF86LaunchB exec 

	# Teclas de bloqueo y sesion
	bindsym XF86ScreenSaver exec swaylock -f -e
	bindsym XF86Sleep exec systemctl suspend

	# Teclas multimedia adicionales
	bindsym XF86Eject exec 
	bindsym XF86AudioMedia exec 

	#Teclas combinadas (Teclas de hardware que son combinaciones de otras) 
	bindsym $mod+l exec swaylock -f -e
	bindsym Control+Alt+Tab exec 
	bindsym $mod+i exec code
	bindsym $mod+Shift+s exec $screenshot
	bindsym $mod+p exec swaymsg output eDP-1 toggle #Desactivar pantalla integrada

	#Otras
	bindsym Pause exec $editor
	bindsym Print exec $screenshot
	bindsym Scroll_Lock exec 




### Visual

	# Background
	output * bg $background fill

	# Font
	font 'Sans' 10

	# Window borders
	default_border pixel 1
	default_floating_border normal
	hide_edge_borders smart
	smart_gaps on

	# Status Bar:
	bar {
		position top

		# When the status_command prints a new line to stdout, swaybar updates.
		# The default just shows the current date and time.
		status_command while date +'%Y-%m-%d     %X'; do sleep 1; done

		colors {
			statusline #ffffff
			background #323232
			inactive_workspace #32323200 #32323200 #5c5c5c
	
		}
	}

### Hardware
	# Keyboard
		# layouts de teclado: US Internacional (con AltGr dead) y Latinoamericano
		input "type:keyboard" {
			xkb_layout us,latam
			xkb_variant altgr-intl 
			xkb_options "grp:alt_space_toggle"
			# Comentar en portatiles o segun necesidad
			xkb_numlock enabled
		}

	# Mouse
		input type:mouse {
			accel_profile adaptive

		}

	# Touchpad
		input type:touchpad {
					dwt enabled
					tap enabled
					accel_profile adaptive
					natural_scroll enabled
					middle_emulation enabled
				}

	# Screens
	output * {
		adaptive_sync on
	}

	# Configuracion basica para 2 pantallas (Laptop + HDMI)
	# Borrar o comentar en caso de ser necesario

	#Monitor principal
	workspace 1 output HDMI-A-1 
	
	#Pantalla Integrada (Laptop)
	output eDP-1 
	{
		# Resolución y frecuencia
		mode 1920x1080@60.049Hz
		# Posición en el espacio virtual
		pos 1920 0
		# Escala
		scale 1.25
		# Transformación
		transform normal
	}
	#Pantalla HDMI
	output HDMI-A-1 
	{
		# Resolución y frecuencia
		mode 1920x1080@74.973Hz
		# Posición en el espacio virtual
		pos 0 0
		# Escala
		scale 1.0
		# Transformación
		transform normal
	}

	### Input configuration

### Includes
	include /etc/sway/config.d/*
	include /etc/sway/config-vars.d/*
